{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": false,
    "removeComments": true,
    "watch": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "www/js/**/*.ts",
    "server/**/*.ts"
  ],
  "exclude": [
      "node_modules"
  ]
}